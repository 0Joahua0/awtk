<window anim_hint="htranslate" layout="h30 c1 m:2 s:2">
 <view layout="r1 c0">
  <label w="30%" text="Age"/>
  <edit w="70%" right_margin="30" text="20" tips="age" input_type="uint" min="0" max="150" step="1" auto_fix="true">
    <button name="inc" x="right" y="1" w="30" h="14" />
    <button name="dec" x="right" y="bottom:1" w="30" h="14" />
  </edit>
 </view>
 <view layout="r1 c0">
  <label w="30%" text="Weight"/>
  <edit w="70%" right_margin="30" text="50" tips="weight" input_type="ufloat" min="0" max="150" step="0.1">
    <button name="inc" x="right" y="1" w="30" h="14" />
    <button name="dec" x="right" y="bottom:1" w="30" h="14" />
  </edit>
 </view>
</window>
